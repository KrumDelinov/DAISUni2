@using BusinessLogic.DomainModels.CourseDomainMoel
@model ICollection<CourseMaterialsViewModel>
@{
    ViewData["Title"] = "CourseMaterials";
}

<h1>All Course Materials</h1>

<p>
    <a asp-controller="Materials" asp-action="Create">Create New Materials</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               MaterialType
            </th>
            <th>
               MaterialUrl
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialUrl)
            </td>
         
           
            <td>
                <a asp-controller="Materials" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Materials" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Materials" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>