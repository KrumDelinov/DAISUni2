@using BusinessLogic.DomainModels.MaterialDomainModels
@model ICollection< AllMaterialsViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                MaterialType
            </th>
            <th>
                MaterialUrl
            </th>
            <th>
               Courses Details
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialType)
            </td>
            <td>
                <a href=@item.MaterialUrl target="_blank" > @item.MaterialUrl</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseDetails)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
